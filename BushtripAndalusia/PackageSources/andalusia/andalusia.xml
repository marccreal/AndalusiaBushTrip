            [InAir]
          </CalculatorFormula>
          <Actions>
            <WorldBase.ObjectReference id="FlowEvent_DisableFuel" InstanceId="{D1646D1F-CFB2-4D83-A490-AC05FD7C6188}" />
          </Actions>
        </CalculatorAction>
